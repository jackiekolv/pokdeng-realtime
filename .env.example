# Server Configuration
PORT=5000
NODE_ENV=development

# Connection Limits
MAX_CONNECTIONS=500
MAX_CONNECTIONS_PER_IP=5

# Logging Configuration
LOG_LEVEL=info
CONNECTION_LOG_INTERVAL=10
STATS_INTERVAL=300000
ENABLE_CONNECTION_LOGS=true
ENABLE_COMMAND_LOGS=false
ENABLE_CHAT_LOGS=false
ENABLE_ERROR_LOGS=true

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SOCKET_RATE_LIMIT_MAX=30
SOCKET_RATE_LIMIT_WINDOW_MS=60000

# Game Configuration
SESSION_CLEANUP_INTERVAL=1800000
SESSION_EXPIRY_TIME=3600000
MAX_CARDS_PER_PLAYER=3
AUTO_SHUFFLE=true
SHUFFLE_THRESHOLD=10
